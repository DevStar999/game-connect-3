<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp">

    <ImageView
        android:id="@+id/boardImageView"
        android:src="@drawable/board"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/startGameButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <GridLayout
        android:id="@+id/cellsGridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:rowCount="3"
        android:columnCount="3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/startGameButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingRight="4dp">
        <ImageView
            android:id="@+id/cellImageView0"
            android:tag="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            android:onClick="makeMove"
            android:src="@drawable/blank"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/cellImageView1"
            android:tag="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            android:onClick="makeMove"
            android:src="@drawable/blank"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/cellImageView2"
            android:tag="2"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            android:onClick="makeMove"
            android:src="@drawable/blank"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/cellImageView3"
            android:tag="3"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            android:onClick="makeMove"
            android:src="@drawable/blank"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/cellImageView4"
            android:tag="4"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            android:onClick="makeMove"
            android:src="@drawable/blank"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/cellImageView5"
            android:tag="5"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            android:onClick="makeMove"
            android:src="@drawable/blank"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/cellImageView6"
            android:tag="6"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            android:onClick="makeMove"
            android:src="@drawable/blank"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/cellImageView7"
            android:tag="7"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            android:onClick="makeMove"
            android:src="@drawable/blank"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/cellImageView8"
            android:tag="8"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            android:onClick="makeMove"
            android:src="@drawable/blank"
            android:alpha="0"/>
    </GridLayout>

    <Button
        android:id="@+id/startGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>