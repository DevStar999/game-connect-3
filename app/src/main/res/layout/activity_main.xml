<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/centerInfoLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/boardImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Player Turn - "
            android:textSize="22sp"
            android:textColor="#000000"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/turnSymbolImageView"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/playMessageTextView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Let's Play"
        android:textSize="22sp"
        android:textColor="#000000"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/boardImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_weight="1"/>

    <ImageView
        android:id="@+id/boardImageView"
        android:src="@drawable/board"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/centerInfoLinearLayout"
        app:layout_constraintBottom_toTopOf="@id/startGameButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_weight="1"/>

    <GridLayout
        android:id="@+id/cellsGridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:rowCount="3"
        android:columnCount="3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/centerInfoLinearLayout"
        app:layout_constraintBottom_toTopOf="@id/startGameButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_weight="1"
        android:paddingRight="4dp">
        <ImageView
            android:id="@+id/cellImageView0"
            android:tag="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            android:onClick="makeMove"
            android:src="@drawable/blank"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/cellImageView1"
            android:tag="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            android:onClick="makeMove"
            android:src="@drawable/blank"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/cellImageView2"
            android:tag="2"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            android:onClick="makeMove"
            android:src="@drawable/blank"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/cellImageView3"
            android:tag="3"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            android:onClick="makeMove"
            android:src="@drawable/blank"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/cellImageView4"
            android:tag="4"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            android:onClick="makeMove"
            android:src="@drawable/blank"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/cellImageView5"
            android:tag="5"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            android:onClick="makeMove"
            android:src="@drawable/blank"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/cellImageView6"
            android:tag="6"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            android:onClick="makeMove"
            android:src="@drawable/blank"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/cellImageView7"
            android:tag="7"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            android:onClick="makeMove"
            android:src="@drawable/blank"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/cellImageView8"
            android:tag="8"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerInside"
            android:onClick="makeMove"
            android:src="@drawable/blank"
            android:alpha="0"/>
    </GridLayout>

    <Button
        android:id="@+id/startGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>